<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:proyectoFinal_YapaFoods.Models"
             xmlns:vm="clr-namespace:proyectoFinal_YapaFoods.ViewModels"
             x:Class="proyectoFinal_YapaFoods.Views.OwnerDashboardPage"
             Title="Panel de Dueño"
             BackgroundColor="#F5F5F5">

    <Grid RowDefinitions="Auto, *">

        <Frame Grid.Row="0" Margin="15,15,15,0" Padding="15" BackgroundColor="White" CornerRadius="10" HasShadow="True">
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding VerPedidosCommand}"/>
            </Frame.GestureRecognizers>
            <Grid ColumnDefinitions="*, Auto">
                <VerticalStackLayout>
                    <Label Text="Pedidos Recibidos" FontSize="18" FontAttributes="Bold" TextColor="#333"/>
                    <Label Text="Toca para ver qué debes preparar" FontSize="12" TextColor="Gray"/>
                </VerticalStackLayout>
                <Label Grid.Column="1" Text="Ver >" TextColor="#D32F2F" VerticalOptions="Center" FontAttributes="Bold"/>
            </Grid>
        </Frame>

        <CollectionView Grid.Row="1" ItemsSource="{Binding MisLocales}" Margin="15">
            <CollectionView.EmptyView>
                <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
                    <Label Text="No tienes locales registrados" TextColor="Gray" FontSize="16"/>
                    <Label Text="Presiona + para crear uno" TextColor="Gray" FontSize="12"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Local">
                    <Frame Margin="0,8" Padding="15" CornerRadius="15" HasShadow="True" BorderColor="Transparent">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:OwnerLocalesViewModel}}, Path=ManageProductsCommand}"
                                CommandParameter="{Binding .}"/>
                        </Frame.GestureRecognizers>

                        <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto">
                            <Label Grid.Row="0" Grid.Column="0" Text="{Binding Nombre}" FontSize="18" FontAttributes="Bold" TextColor="#333"/>
                            <Label Grid.Row="1" Grid.Column="0" Text="{Binding Estado}" FontSize="12" TextColor="Gray"/>
                            <VerticalStackLayout Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" VerticalOptions="Center">
                                <Label Text="Gestionar >" TextColor="#D32F2F" FontAttributes="Bold"/>
                                <Label Text="Productos" TextColor="#D32F2F" FontSize="10" HorizontalOptions="End"/>
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Grid.Row="1" Text="+" 
                Command="{Binding NuevoLocalCommand}"
                BackgroundColor="#D32F2F" TextColor="White"
                FontSize="30" CornerRadius="30"
                WidthRequest="60" HeightRequest="60"
                HorizontalOptions="End" VerticalOptions="End"
                Margin="20"
                Shadow="{Shadow Brush=Black, Offset='2,2', Opacity=0.5}"/>
    </Grid>
</ContentPage>