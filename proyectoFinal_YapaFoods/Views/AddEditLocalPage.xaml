<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="proyectoFinal_YapaFoods.Views.AddEditLocalPage"
             Title="Nuevo Local"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Registrar Local" FontSize="22" FontAttributes="Bold" TextColor="Black"/>

            <Entry Placeholder="Nombre del Local" Text="{Binding Nombre}" TextColor="Black" BackgroundColor="White"/>

            <Label Text="Direcci贸n (Iframe HTML de Google Maps)" FontSize="12" TextColor="Gray"/>

            <Editor Placeholder="Pega aqu铆 el c贸digo HTML (iframe src=...)" 
                    Text="{Binding DireccionHtml}" 
                    HeightRequest="80" 
                    TextColor="Black" 
                    BackgroundColor="White"/>

            <Entry Placeholder="Horario (Ej: 9am - 6pm)" Text="{Binding Horario}" TextColor="Black" BackgroundColor="White"/>
            <Entry Placeholder="Contacto / Tel茅fono" Text="{Binding Contacto}" TextColor="Black" BackgroundColor="White"/>

            <Label Text="Ubicaci贸n GPS" FontAttributes="Bold" TextColor="#333" Margin="0,10,0,0"/>

            <Button Text=" Pegar desde Portapapeles" 
                    Command="{Binding PegarCoordenadasCommand}" 
                    BackgroundColor="#1976D2" 
                    TextColor="White" 
                    FontSize="12"
                    HeightRequest="40"
                    HorizontalOptions="Start"/>
            <Label Text="(Copia 'Lat, Long' de Google Maps y presiona el bot贸n)" FontSize="10" TextColor="Gray"/>

            <Grid ColumnDefinitions="*,*">
                <Entry Grid.Column="0" Placeholder="Latitud" 
                       Text="{Binding Latitud}" Keyboard="Numeric" 
                       TextColor="Black" BackgroundColor="White" Margin="0,0,5,0"/>

                <Entry Grid.Column="1" Placeholder="Longitud" 
                       Text="{Binding Longitud}" Keyboard="Numeric" 
                       TextColor="Black" BackgroundColor="White" Margin="5,0,0,0"/>
            </Grid>

            <Button Text="Guardar y Enviar" Command="{Binding GuardarCommand}" BackgroundColor="#D32F2F" Margin="0,20"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>