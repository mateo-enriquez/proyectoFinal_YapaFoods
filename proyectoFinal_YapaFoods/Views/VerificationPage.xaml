<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="proyectoFinal_YapaFoods.Views.VerificationPage"
             Title="Verificar Cuenta">
    <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">
        <Label Text="Ingresa el Código" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" TextColor="Black"/>
        <Label Text="Hemos enviado un código de 6 dígitos a tu correo." HorizontalOptions="Center" HorizontalTextAlignment="Center" TextColor="Gray"/>

        <Entry Placeholder="Ej: 123456" 
               Text="{Binding Codigo}" 
               Keyboard="Numeric" 
               MaxLength="6"
               HorizontalTextAlignment="Center"
               FontSize="24"
               TextColor="Black"
               BackgroundColor="#F0F0F0"/>

        <Button Text="VERIFICAR" Command="{Binding VerifyCommand}" BackgroundColor="#D32F2F" CornerRadius="20"/>

        <Button Text="Reenviar Código" Command="{Binding ResendCommand}" BackgroundColor="Transparent" TextColor="#D32F2F"/>

        <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" Color="#D32F2F"/>
    </VerticalStackLayout>
</ContentPage>