<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:proyectoFinal_YapaFoods.Models"
             x:Class="proyectoFinal_YapaFoods.Views.ManageProductsPage"
             Title="GestiÃ³n de Productos">

    <Grid RowDefinitions="*, Auto">
        <CollectionView Grid.Row="0" ItemsSource="{Binding Productos}" Margin="10">
            <CollectionView.EmptyView>
                <Label Text="No hay productos registrados." HorizontalOptions="Center" VerticalOptions="Center" TextColor="Gray"/>
            </CollectionView.EmptyView>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Producto">
                    <Frame Margin="0,5" Padding="10" CornerRadius="10">
                        <Grid ColumnDefinitions="Auto, *, Auto">
                            <Image Grid.Column="0" Source="{Binding ImagenSvgPath}" WidthRequest="60" HeightRequest="60" Aspect="AspectFit"/>

                            <VerticalStackLayout Grid.Column="1" Margin="10,0" VerticalOptions="Center">
                                <Label Text="{Binding Nombre}" FontAttributes="Bold" FontSize="16" TextColor="Black"/>
                                <Label Text="{Binding Precio, StringFormat='${0:F2}'}" TextColor="#D32F2F"/>
                                <Label Text="{Binding Unidades, StringFormat='Stock: {0}'}" FontSize="12" TextColor="Gray"/>
                            </VerticalStackLayout>

                            <Button Grid.Column="2" Text="X" 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteCommand}"
                                    CommandParameter="{Binding .}"
                                    BackgroundColor="Transparent" TextColor="Red" FontAttributes="Bold"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Grid.Row="1" Text="Agregar Nuevo Producto" 
                Command="{Binding AddProductCommand}"
                BackgroundColor="#D32F2F" Margin="20" CornerRadius="20"/>
    </Grid>
</ContentPage>