<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="proyectoFinal_YapaFoods.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:proyectoFinal_YapaFoods.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="proyectoFinal_YapaFoods">

    <ShellContent
        Title="Login"
        Route="LoginPage"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Shell.TabBarIsVisible="False" />

    <TabBar>
        <ShellContent
            Title="Inicio"
            Icon="dotnet_bot.png" 
            Route="ClientDashboardPage"
            ContentTemplate="{DataTemplate views:ClientDashboardPage}" />

        <ShellContent
            Title="Carrito"
            Icon="dotnet_bot.png"
            Route="CartPage"
            ContentTemplate="{DataTemplate views:CartPage}" />
        <ShellContent
            Title="Cerca"
            Icon="dotnet_bot.png"
            Route="NearbyPage"
            ContentTemplate="{DataTemplate views:NearbyPage}" />
        <ShellContent
            Title="Perfil"
            Icon="dotnet_bot.png"
            Route="ProfilePage"
            ContentTemplate="{DataTemplate views:ProfilePage}" />
     </TabBar>

</Shell>